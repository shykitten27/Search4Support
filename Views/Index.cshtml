@model List<Search4Support.Models.Service>

@*NAV BAR GOES HERE*@
<h1>Services</h1>

@if (Model.Count == 0)
{
    <p>No services available.</p>
}
else
{
    <table class="sortable">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Location</th>
            <th>Add to Favorites</th>
        </tr>
        @foreach (var service in Model)
        {
            <tr>
                <td><a asp-controller="List" asp-action="Detail" asp-route-id="@service.Id">@service.Name</a></td>
                <td>@service.Category </td>
                <td>@service.Location</td>
                <td><input type="checkbox" /></td>
            </tr>
        }
    </table>
}

