@using Search4Support.ViewModels
@model List<Search4Support.Models.Service>
<h1>Services</h1>
@if (Model.Count == 0){
<p>No services available.</p>}
else{
<table class="table">
<tr>
<th>Name</th>
<th>Category</th>
<th>Location</th>
@*<th>Add to Favorites</th>*@
</tr>
@foreach (var srv in Model)
{
<tr>
<td>
<a asp-controller="Services" asp-action="Detail" asp-route-id="@srv.Id">@srv.Name</a></td>
<td>@srv.Category</td>
<td>@srv.Provider.Address</td>
@*<td><input type="checkbox" />*@
@*</td>*@
</tr>
}
</table>}