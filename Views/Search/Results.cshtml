@using Search4Support.ViewModels
@model List<Search4Support.Models.Service>
<h2>Services</h2>
@if (Model.Count == 0){
<p>No services available.</p>}
else{
<table class="table">
<tr>
<th>Name</th>
<th>Category</th>
<th>Location</th>
<th>Add to Favorites</th>
</tr>
@foreach (var service in Model)
{
<tr>
<td>
<a asp-controller="Search" asp-action="Results" asp-route-id="@service.Id">@service.Name</a></td>
@*<td>@service.Category.Name </td>
<td>@service.Location.Address</td>*@
<td><input type="checkbox" />
</td>
</tr>
}
</table>}