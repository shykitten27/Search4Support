@model List<Search4Support.Models.ServiceCategory>

<h1>All Service Categories</h1>

@if (Model.Count == 0)
{
    <p>No Service Categories yet!</p>
}
else
{
    <table class="table">
        <tr>
            <th>Id</th>
            <th>Category Name</th>
        </tr>
        @foreach (ServiceCategory category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
            </tr>
        }
    </table>
}