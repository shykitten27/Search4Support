@model Search4Support.ViewModels.AddProviderViewModel;

<h2>Add New Provider</h2>

<form asp-controller="Providers" asp-action="ProcessAddProviderForm" method="post">
    <div class="form-group">
        <label asp-for="Name">Provider Name</label>
        <input asp-for="Name" />
        <span class="field-validation-error" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Phone Number</label>
        <input asp-for="PhoneNumber" />
        <span class="field-validation-error" asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address">Address</label>
        <input asp-for="Address" />
        <span class="field-validation-error" asp-validation-for="Address"></span>
    </div>
    @*    <div class="form-group">
            <label asp-for="MapLink">MapLink</label>
            <input asp-for="MapLink" />
            <span class="field-validation-error" asp-validation-for="MapLink"></span>
        </div>*@
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" />
        <span class="field-validation-error" asp-validation-for="Description"></span>
    </div>

    <input type="submit" value="Add Provider" />
</form>