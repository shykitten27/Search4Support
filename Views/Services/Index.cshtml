@using Search4Support.Models

<h1>Services</h1>

<style>
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #f1f1f1;
    }
</style>

@if (Model.Count == 0)
{
    <p>No services yet!</p>
}
else
{ 
<table class="table striped">
    <tr>
        <th>Name</th>
        <th>Category</th>
        <th>Provider</th>
        @*<th>Add to Favorites</th>*@
    </tr>
    @foreach (var srv in Model)
    {
        <tr>
            <td><a asp-controller="Services" asp-action="Detail" asp-route-id="@srv.Id">@srv.Name</a></td>
            <td><a asp-controller="Categories" asp-action="Detail" asp-route-id="@srv.Id">@srv.Category</a></td>
            <td><a asp-controller="Providers" asp-action="Detail" asp-route-id="@srv.Id">@srv.Provider</a></td>
            @*<td><input type="checkbox" /></td>*@
        </tr>
    }
</table>
}

