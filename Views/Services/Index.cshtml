@using Search4Support.Models
@model List<Service>

<h1>Services</h1>

@if (Model.Count == 0)
{
    <p>No services yet!</p>
}
else
{ 
<table class="table">
        <tr>
            @*<th>
                Id
            </th>*@
            <th>
                Name
            </th>
            <th>
                Provider
            </th>
            <th>
                Location
            </th>
            <th>
                Category
            </th>
        </tr>
    @foreach (var srv in Model)
    {
        <tr>
            @*<td>@srv.Id</td>*@
            <td>@srv.Name</td>
            @*<td>@srv.Provider.Name</td>*@
            @*<td>@srv.Location.Address</td>
            <td>@srv.Category.Name</td>*@
        </tr>
    }
</table>
}

